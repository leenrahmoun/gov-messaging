# Database Configuration
# IMPORTANT: Update credentials to match your PostgreSQL setup
# Default format: postgresql://user:password@localhost:5432/database_name
DATABASE_URL=postgresql://postgres:2000@localhost:5432/gov_messaging

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Change this to a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Approval Workflow Configuration
# Set to 'true' to require admin approval after manager approval for employee messages
ADMIN_APPROVAL_REQUIRED=false

# Admin User Configuration (لإنشاء مستخدم المسؤول الأول)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@gov.ma
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=مدير النظام
ADMIN_DEPARTMENT=إدارة تقنية المعلومات

